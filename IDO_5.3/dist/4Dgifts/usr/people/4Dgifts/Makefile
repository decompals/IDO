SHELL = /bin/sh

all: 
	cd OpenGL/toogl; $(MAKE)
	cd examples; $(MAKE)
	cd iristools; $(MAKE)
	cd src; $(MAKE)

clean:
	cd OpenGL/toogl; $(MAKE) clean
	cd examples; $(MAKE) clean
	cd iristools; $(MAKE) clean
	cd src; $(MAKE) clean

clobber:
	cd OpenGL/toogl; $(MAKE) clobber
	cd examples; $(MAKE) clobber
	cd iristools; $(MAKE) clobber
	cd src; $(MAKE) clobber
