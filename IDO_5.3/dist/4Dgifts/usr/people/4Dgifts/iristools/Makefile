SHELL = /bin/sh

all:
	cd libgutil; $(MAKE)
	cd libimage; $(MAKE)
	cd tools; $(MAKE)
	cd imgtools; $(MAKE)

clean:
	cd libgutil; $(MAKE) clean
	cd libimage; $(MAKE) clean
	cd tools; $(MAKE) clean
	cd imgtools; $(MAKE) clean

clobber:
	cd libgutil; $(MAKE) clobber
	cd libimage; $(MAKE) clobber
	cd tools; $(MAKE) clobber
	cd imgtools; $(MAKE) clobber
