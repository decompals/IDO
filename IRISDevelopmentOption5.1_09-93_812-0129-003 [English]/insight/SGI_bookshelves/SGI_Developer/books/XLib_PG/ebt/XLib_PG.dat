   if (PuzzleWidth < 4 || PuzzleHeight < 4) {
      fprintf (stderr, "%s:  Puzzle size must be at least 4x4\n",
            ProgName);
   exit (1);
   }
   PuzzleSize = min((PuzzleWidth/2)*2,(PuzzleHeight/2)*2);
   Setup (Geometry,argc,argv);
   ProcessInput();
   exit (0);
}
