static XrmDatabase commandlineDB;
/* Get command line options */
parseOpenDisp (argc, argv)
int *argc;
register char *argv[];
{
   XrmValue value;
   char *str_type[20];
   myDisplayName[0] = '\0';
   XrmParseCommand(&commandlineDB, opTable, opTableEntries, argv[0],
         argc, argv);XrmParseCommandexample
   /* Check for any arguments left */
