        char *data;
        width = cw->bitmapEdit.select_end_x -
                cw->bitmapEdit.select_start_x;
        height = cw->bitmapEdit.select_end_y -
                cw->bitmapEdit.select_start_y;
                /* 8 chars is enough for two 3-digit
